<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/car_margin_top"
    app:cardCornerRadius="@dimen/corner"
    app:cardElevation="@dimen/elevation">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/call_image"
                android:layout_width="@dimen/call_height"
                android:layout_height="@dimen/call_width"
                android:src="@drawable/call_green" />

            <ImageView
                android:id="@+id/email_image"
                android:layout_width="@dimen/email_height"
                android:layout_height="@dimen/email_weight"
                android:src="@drawable/email_blue" />
        </LinearLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/title_female"
                android:layout_width="@dimen/name_width"
                android:layout_height="wrap_content" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_female"
                android:layout_width="@dimen/img_height_female"
                android:layout_height="@dimen/img_width_female"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/margin_img"
                android:foregroundGravity="center_vertical">

            </de.hdodenhof.circleimageview.CircleImageView>
        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>