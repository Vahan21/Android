<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="10dp"
    android:orientation="horizontal"
    app:cardCornerRadius="15dp"
    android:layout_marginTop="1dp"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_male"
        android:layout_width="@dimen/img_width_male"
        android:layout_height="@dimen/img_height_male"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/margin_start_img"
        />
    <TextView
        android:id="@+id/title_male"
        android:layout_width="match_parent"
        android:layout_height="@dimen/name_width_male"
        android:layout_marginStart="@dimen/name_height_male"
        />


</android.support.v7.widget.CardView>